<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Categories list</title>
  </head>
  <body>
    <a href="/categories/new">Create new category</a>
    <ul>
      <% categories.forEach((category) => { %>
      <li class="category">
        <h1>Category: <%= category.name %></h1>
        <h2><%= category.description %></h2>
        <img
          src="<%= category.image_url %>"
          alt="image of <%= category.name %>"
        />
        <a href="/categories/<%= category.id %>">Show items by category</a>
        <a href="/categories/<%= category.id %>/delete">Delete Category</a>
        <a href="/categories/<%= category.id %>/edit">Update Category</a>
      </li>
      <% }) %>
    </ul>
  </body>
</html>
